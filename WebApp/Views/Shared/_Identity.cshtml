@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicatonUser> UserManager;


@if (!User.Identity.IsAuthenticated)

{
    <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Account" asp-action="Login">
    <i class="bi bi-box-arrow-in-right"></i> Uloguj se
</a>
<span style="padding: 5px;"></span>
<a class="btn btn-outline-primary my-2 my-sm-0" asp-controller="Account" asp-action="Registracija">
    <i class="bi bi-person-plus"></i> Registruj se
    </a>


}
else
{
    
<button class="btn btn-outline-success dropdown-toggle" type="button" id="profile-btn"
        aria-expanded="false">
    <i class="bi bi-person-badge"></i> Hello @UserManager.GetUserName(User)
</button>
<span style="padding: 5px;"></span>
<form asp-controller="Account" asp-action="Logout">
    <button class="btn btn-outline-danger my-2 my-sm-0">
        <i class="bi bi-box-arrow-in-right"></i> Izloguj se
    </button>
</form>



}


