@model Glumac  
@{
    ViewData["Title"] = "Dodaj novog glumca";
}

 <div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Dodaj novog glumca</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-controller="Glumci" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img id="slikaPrikaz" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group text-center">
                        <img id="slikaGore" class="border-info rounded-circle" style="max-width: 150px" />
                    </div> 
                    <div class="form-group mb-4" >
                        <label >UrlSlike</label>
                        <input id="UrlSlike" asp-for="UrlSlike" class="form-control" />
                        <span asp-validation-for="UrlSlike" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label >PunoIme</label>
                        <input asp-for="PunoIme" class="form-control" />
                        <span asp-validation-for="PunoIme" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label >Biografija</label>
                        <input asp-for="Biografija" class="form-control" />
                        <span asp-validation-for="Biografija" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Prikazi sve</a>
                    </div>
                </form>
            </div>
        </div>
     </div>
</div>
@section Scripts{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var slika = document.getElementById('slikaPrikaz');
            slika.src = document.getElementById('UrlSlike').value;
        });

        document.querySelector("#UrlSlike").addEventListener("change", function () {
            var slika = document.getElementById("slikaPrikaz");
            slika.src = $(this).val();
        })
    </script>
}