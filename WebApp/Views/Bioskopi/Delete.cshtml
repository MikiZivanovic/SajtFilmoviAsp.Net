@model Bioskop
@{
    ViewData["Title"] = "Brisanje bioskopa";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Brisanje bioskopa @Model.Ime</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">


                <div class="form-group text-center">
                    <img id="slikaPrikaz" class="border-info rounded-circle" style="max-width: 150px" />
                </div>
                <div class="form-group mb-4">
                    <label>URLLoga</label>
                    <input asp-for="Logo" class="form-control" readonly />

                </div>
                <div class="form-group mb-4">
                    <label>Naziv</label>
                    <input asp-for="Ime" class="form-control" readonly />

                </div>
                <div class="form-group mb-4">
                    <label>Opis</label>
                    <input asp-for="Opis" class="form-control" readonly />

                </div>

                <div class="form-group">
                    <form asp-action="DeletePost">
                        <input type="hidden" asp-for="Id" />
                        <div class="float-right">
                            <input type="submit" value="Obrisi" class="btn btn-danger" />
                            <a class="btn btn-outline-secondary ml-2" asp-action="Index">Prikazi sve</a>
                        </div>
                    </form>
                </div>
                    
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var slika = document.getElementById('slikaPrikaz');
            slika.src = document.getElementById('UrlSlike').value;
        });

       
    </script>
}