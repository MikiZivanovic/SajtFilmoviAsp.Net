@model Bioskop  
@{
    ViewData["Title"] = "Izmeni bioskop";
}

 <div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Izmeni bioskop</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-controller="Bioskopi" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="slikaPrikaz" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group mb-4" >
                        <label >URLLoga</label>
                        <input id="UrlSlike" asp-for="Logo" class="form-control" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label >Naziv</label>
                        <input asp-for="Ime" class="form-control" />
                        <span asp-validation-for="Ime" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label>Opis</label>
                        <input asp-for="Opis" class="form-control" />
                        <span asp-validation-for="Opis" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <input type="submit" value="Edit" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Prikazi sve</a>
                    </div>
                </form>
            </div>
        </div>
     </div>
</div>
@section Scripts{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var slika = document.getElementById('slikaPrikaz');
            slika.src = document.getElementById('UrlSlike').value;
        });

        document.querySelector("#UrlSlike").addEventListener("change", function () {
            var slika = document.getElementById("slikaPrikaz");
            slika.src = $(this).val();
        })
    </script>
}