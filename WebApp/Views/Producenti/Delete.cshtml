@model Producent
@{
    ViewData["Title"] = "Brisanje producenta";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Brisanje producenta @Model.PunoIme</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">



                <div class="form-group text-center">
                    <img id="slikaPrikaz" class="border-info rounded-circle" style="max-width: 150px" />
                </div>
                <div class="form-group mb-4">
                    <label>UrlSlike</label>
                    <input asp-for="UrlSlike" class="form-control" readonly />

                </div>
                <div class="form-group mb-4">
                    <label>Ime i Prezime</label>
                    <input asp-for="PunoIme" class="form-control" readonly />

                </div>
                <div class="form-group mb-4">
                    <label>Biografija</label>
                    <input asp-for="Biografija" class="form-control" readonly />

                </div>

                <div class="form-group">
                    <form asp-action="DeletePost">
                        <input type="hidden" asp-for="Id" />
                        <div class="float-right">
                            <input type="submit" value="Obrisi" class="btn btn-danger" />
                            <a class="btn btn-outline-secondary ml-2" asp-action="Index">Prikazi sve</a>
                        </div>
                    </form>
                </div>
                    
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var slika = document.getElementById('slikaPrikaz');
            slika.src = document.getElementById('UrlSlike').value;
        });

        
    </script>
}